{% for contact in security_txt.contacts %}
Contact: {{ contact }}
{% endfor %}
{% if security_txt.auto_expire is truthy and security_txt.expires is not defined %}
# This expiration was automatically generated by configuration management.
Expires: {{(ansible_date_time.year|int)+1}}-{{ansible_date_time.month}}-01T00:00:00.000Z
{% else %}
Expires: {{ security_txt.expires }}
{% endif%}
{% if security_txt.preferred_languages is defined %}
Preferred-Languages: {{ security_txt.preferred_languages|join(",") }}
{% endif %}
Canonical: https://{{ site.domain }}/security.txt
